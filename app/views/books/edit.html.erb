<h1>Editing Book</h1>

<!-- エラー表示予定地 -->

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>

<p><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', :books %></p>
