<body>
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
  <div id="error_explanation">
    <% if @book.errors.count == 1 %> <!-- エラーが1個 -->
      <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <% else %> <!-- エラーが2個以上(1以上かつ1でない) -->
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <% end %>
    <ul>
      <% @book.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <% if @book.errors.include?(:title) %>
      <p class="form-error">
        Title
        <%= f.text_field :title %>
      </p>
    <% else %>
      <h4 class="form-normal">Titlecorrect</h4>
      <%= f.text_field :title %>
    <% end %>

    <% if @book.errors.include?(:body) %>
      <h4 class="form-error">Bodywrong</h4>
      <%= f.text_area :body %>
    <% else %>
      <h4 class="form-normal">Bodycorrect</h4>
      <%= f.text_area :body %>
    <% end %>

    <%= f.submit '投稿' %>
  <% end %>

  <p><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', :books %></p>
</body>
