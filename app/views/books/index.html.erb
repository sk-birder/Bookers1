<body>
  <h1>Books</h1>

  <table class="hoge">
    <theader class="fuga">
      <th>カラム名1</th>
      <th>カラム名2</th>
      <th>空欄1</th>
      <th>空欄2</th>
      <th>空欄3</th>
    </theader>

    <% @book_all.each do |l| %>
      <tr class="piyo">
        <td><%= l.title %></td>
        <td><%= l.body %></td>
        <td><%= link_to 'Show', book_path(l.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(l.id) %></td>
        <td><%= link_to 'Destroy', book_path(l.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>

  <div class="CrateBook">
    <h1>New book</h1>

    <% if @book.errors.any? %>
      <div id="error_explanation">
        <% if @book.errors.count == 1 %> <!-- エラーが1個 -->
          <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
        <% else %> <!-- エラーが2個以上(1個以上で1ではない) -->
          <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <% end %>
        <ul>
          <% @book.errors.full_messages.each do |m| %>
            <li><%= m %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <% if @book.errors.include?(:title) %>
        <h4 class="form-error">Titlewrong</h4>
        <%= f.text_field :title %>
      <% else %>
        <h4 class="form-normal">Titlecorrect</h4>
        <%= f.text_field :title %>
      <% end %>

      <% if @book.errors.include?(:body) %>
        <h4 class="form-error">Bodywrong</h4>
        <%= f.text_area :body %>
      <% else %>
        <h4 class="form-normal">Bodycorrect</h4>
        <%= f.text_area :body %>
      <% end %>

      <%= f.submit '投稿' %>
    <% end %>
  </div>
</body>